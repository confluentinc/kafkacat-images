FROM debian:stretch-slim

WORKDIR /build

ENV VERSION=1.5.0
ENV BUILD_PACKAGES="build-essential make cmake python git curl zlib1g-dev libsasl2-dev libssl-dev libcurl4-gnutls-dev pkg-config"

RUN echo "Building kafkacat ....." \
    && apt-get update -y \
    && DEBIAN_FRONTEND=noninteractive apt-get install -y $BUILD_PACKAGES \
    && git clone https://github.com/edenhill/kafkacat \
    && cd kafkacat \
    && git checkout $VERSION \
    && LIBRDKAFKA_VERSION=v1.4.4 ./bootstrap.sh \
    && make \
    && ldd kafkacat

FROM debian:stretch-slim

LABEL maintainer="partner-support@confluent.io"
LABEL io.confluent.docker=true
ARG GIT_COMMIT
LABEL io.confluent.docker.git.id=$GIT_COMMIT
ARG BUILD_NUMBER=-1
LABEL io.confluent.docker.build.number=$BUILD_NUMBER
LABEL io.confluent.docker.git.repo="confluentinc/kafkacat-images"

COPY --from=0 /build/kafkacat/kafkacat /usr/local/bin/

RUN apt-get update -y \
    && echo "Installing runtime dependencies for SSL and SASL support ...." \
    && DEBIAN_FRONTEND=noninteractive apt-get install -y \
        openssl \
        libssl1.1 \
        libsasl2-2 \
        libsasl2-modules-gssapi-mit \
        krb5-user \
        krb5-config \
        ca-certificates \
        libcurl3-gnutls \
    && apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

CMD ["kafkacat"]
